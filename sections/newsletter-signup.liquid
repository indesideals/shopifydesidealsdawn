<div class="newsletter-signup" style="background: var(--color-primary); color: white; padding: 4rem 0;">
  <div class="container">
    <div style="text-align: center; max-width: 600px; margin: 0 auto;">
      <h2 style="font-size: 2.5rem; margin-bottom: 1rem;">Stay Updated</h2>
      <p style="font-size: 1.1rem; margin-bottom: 2rem; opacity: 0.9;">
        Subscribe to our newsletter for the latest products, exclusive offers, and updates.
      </p>
      
      <form action="/contact#contact_form" method="post" style="display: flex; gap: 1rem; max-width: 400px; margin: 0 auto;">
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="âœ“">
        <input type="email" name="contact[email]" placeholder="Enter your email" required 
               style="flex: 1; padding: 0.75rem; border: none; border-radius: 4px; font-size: 1rem;">
        <button type="submit" class="btn" style="background: var(--color-accent); border: none;">
          Subscribe
        </button>
      </form>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Stay Updated"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Subscribe to our newsletter for the latest products, exclusive offers, and updates."
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup"
    }
  ]
}
{% endschema %}
