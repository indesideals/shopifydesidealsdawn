    padding: 12px 18px;
    font-size: 12px;
    width: 100%;
    max-width: 280px;
    margin: 0 auto;
  }
  
  .trending-product-price {
    justify-content: center;
    text-align: center;
    flex-wrap: wrap;
  }
  
  .trending-product-header {
    justify-content: center;
    gap: 8px;
  }
  
  .product-rating {
    justify-content: center;
  }
  
  .trending-wishlist-btn {
    margin-left: 0;
  }
}
