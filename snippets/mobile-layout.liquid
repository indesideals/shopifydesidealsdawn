<!-- Mobile Header - Logo + Burger Menu -->
<header class="mobile-header">
  <div class="mobile-header-content">
    <!-- Burger Menu -->
    <button class="mobile-menu-toggle" onclick="toggleMobileMenu()" aria-label="Menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
    
    <!-- Logo Center -->
    <div class="mobile-logo">
      <a href="/">
        {% if settings.logo %}
          <img src="{{ settings.logo | image_url: width: 300 }}" alt="{{ shop.name }}" loading="eager">
        {% else %}
          <span class="mobile-logo-text">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>
    
    <!-- Empty space for balance -->
    <div class="mobile-header-spacer"></div>
  </div>
</header>

