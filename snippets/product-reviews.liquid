{% if reviews.size > 7 %}
  <div class="load-more-reviews" style="text-align: center; margin-top: 20px;">
    <button class="load-more-btn" onclick="loadMoreReviews()" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; padding: 12px 24px; border-radius: 8px; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
