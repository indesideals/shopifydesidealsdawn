{% comment %}
  Simple Manual Star Rating System
  Usage: {% render 'star-rating', rating: 4.5 %}
  You can manually set the rating for each product
{% endcomment %}

{% assign full_stars = rating | floor %}
{% assign decimal_part = rating | modulo: 1 | round: 1 %}
{% assign next_star = full_stars | plus: 1 %}

{% for i in (1..5) %}
  {% if i <= full_stars %}
    <span class="star filled" style="color: #fbbf24;">★</span>
  {% elsif decimal_part >= 0.1 and i == next_star %}
    <span class="star partial" style="color: #fbbf24;">★</span>
  {% else %}
    <span class="star" style="color: #d1d5db;">★</span>
  {% endif %}
{% endfor %}
