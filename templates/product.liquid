// Load more reviews functionality
function loadMoreReviews() {
  const hiddenReviews = document.querySelectorAll('.hidden-review');
  const loadMoreBtn = document.querySelector('.load-more-btn');
  
  hiddenReviews.forEach(review => {
    review.classList.remove('hidden-review');
  });
  
  if (loadMoreBtn) {
    loadMoreBtn.style.display = 'none';
  }
}

// Sort reviews functionality
function sortReviews() {
  const sortSelect = document.getElementById('reviewSort');
  const reviewsList = document.getElementById('reviewsList');
  const reviews = Array.from(reviewsList.querySelectorAll('.review-card'));
  const loadMoreSection = reviewsList.querySelector('.load-more-reviews');
  const sortBy = sortSelect.value;
  
  // Remove load more section temporarily
  if (loadMoreSection) {
    loadMoreSection.remove();
  }
  
  reviews.sort((a, b) => {
    const ratingA = parseInt(a.dataset.rating);
    const ratingB = parseInt(b.dataset.rating);
    const dateA = parseInt(a.dataset.date);
    const dateB = parseInt(b.dataset.date);
    
    switch(sortBy) {
      case 'newest':
        return dateA - dateB;
      case 'oldest':
        return dateB - dateA;
      case 'highest':
        return ratingB - ratingA;
      case 'lowest':
        return ratingA - ratingB;
      default:
        return dateA - dateB;
    }
  });
  
  // Clear and re-append sorted reviews
  reviewsList.innerHTML = '';
  reviews.forEach(review => {
    reviewsList.appendChild(review);
  });
  
  // Re-append load more section only if there are hidden reviews
  const hiddenReviews = reviewsList.querySelectorAll('.hidden-review');
  if (hiddenReviews.length > 0 && loadMoreSection) {
    reviewsList.appendChild(loadMoreSection);
  }
}
</script>


